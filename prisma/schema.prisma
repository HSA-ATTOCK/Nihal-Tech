generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String              @id @default(uuid())
  name              String?
  email             String              @unique
  password          String
  role              Role                @default(CLIENT)
  verified          Boolean             @default(false)
  verificationToken String?
  resetToken        String?
  address           String?             @default("")
  phone             String?             @default("")
  addresses         Address[]
  cartItems         CartItem[]
  orders            Order[]
  orderComments     OrderComment[]
  paymentMethods    PaymentMethod[]
  answers           ProductAnswer[]
  comparisons       ProductComparison[]
  questions         ProductQuestion[]
  recentlyViewed    RecentlyViewed[]
  repairs           RepairBooking[]
  returnRequests    ReturnRequest[]
  reviews           Review[]
  wishlist          WishlistItem[]
}

model Product {
  id             String            @id @default(uuid())
  name           String
  description    String
  price          Float
  imageUrl       String
  stock          Int
  imageUrls      String[]          @default([])
  category       String            @default("New Phones")
  variations     Json              @default("[]")
  brand          String?           @default("")
  cartItems      CartItem[]
  questions      ProductQuestion[]
  recentlyViewed RecentlyViewed[]
  reviews        Review[]
  wishlist       WishlistItem[]
}

model RepairBooking {
  id         String   @id @default(uuid())
  userId     String
  phoneModel String
  issue      String
  date       DateTime
  status     String   @default("Pending")
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model Order {
  id              String          @id @default(uuid())
  userId          String
  total           Float
  createdAt       DateTime        @default(now())
  phone           String          @default("")
  shippingAddress String          @default("")
  items           Json            @default("[]")
  shippingEmail   String          @default("")
  shippingName    String          @default("")
  status          String          @default("pending")
  deliveredAt     DateTime?
  invoice         Invoice?
  user            User            @relation(fields: [userId], references: [id])
  comments        OrderComment[]
  returns         ReturnRequest[]
}

model OrderComment {
  id         String   @id @default(uuid())
  orderId    String
  userId     String?
  authorRole Role
  message    String
  createdAt  DateTime @default(now())
  order      Order    @relation(fields: [orderId], references: [id])
  user       User?    @relation(fields: [userId], references: [id])
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  label     String   @default("Primary")
  name      String
  phone     String
  line1     String
  line2     String?
  city      String
  postCode  String
  country   String   @default("UK")
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([isDefault])
}

model PaymentMethod {
  id                      String   @id @default(uuid())
  userId                  String
  brand                   String?
  last4                   String?
  expMonth                Int?
  expYear                 Int?
  provider                String?
  providerPaymentMethodId String?
  providerCustomerId      String?
  createdAt               DateTime @default(now())
  isDefault               Boolean  @default(false)
  cardNumber              String?
  cvv                     String?
  nameOnCard              String?
  user                    User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Invoice {
  id       String   @id @default(uuid())
  orderId  String   @unique
  number   String
  url      String
  issuedAt DateTime @default(now())
  order    Order    @relation(fields: [orderId], references: [id])
}

model ReturnRequest {
  id        String   @id @default(uuid())
  orderId   String
  userId    String
  status    String   @default("pending")
  reason    String
  notes     String?
  rmaNumber String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order     Order    @relation(fields: [orderId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([orderId])
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  productId String
  rating    Int
  title     String
  body      String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
  @@index([productId])
}

model ProductQuestion {
  id        String          @id @default(uuid())
  productId String
  userId    String
  question  String
  createdAt DateTime        @default(now())
  answers   ProductAnswer[]
  product   Product         @relation(fields: [productId], references: [id])
  user      User            @relation(fields: [userId], references: [id])

  @@index([productId])
}

model ProductAnswer {
  id         String          @id @default(uuid())
  questionId String
  userId     String?
  body       String
  createdAt  DateTime        @default(now())
  question   ProductQuestion @relation(fields: [questionId], references: [id])
  user       User?           @relation(fields: [userId], references: [id])

  @@index([questionId])
}

model WishlistItem {
  id        String   @id @default(uuid())
  userId    String
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
  @@index([userId])
}

model RecentlyViewed {
  id        String   @id @default(uuid())
  userId    String
  productId String
  viewedAt  DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
  @@index([viewedAt])
}

model ProductComparison {
  id         String   @id @default(uuid())
  userId     String
  productIds Json     @default("[]")
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Bundle {
  id            String   @id @default(uuid())
  name          String
  description   String?
  items         Json     @default("[]")
  priceOverride Float?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model CartItem {
  id                 String   @id @default(uuid())
  userId             String
  productId          String
  quantity           Int      @default(1)
  createdAt          DateTime @default(now())
  selectedVariations Json     @default("{}")
  price              Float?
  product            Product  @relation(fields: [productId], references: [id])
  user               User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  CLIENT
}
